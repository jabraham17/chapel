cd .. && rm -rf bad.name



# we can still use bad dir names with --name
mason new 0bad --name good
cd 0bad
cat Mason.toml | sed '/chplVersion/d'
cd .. && rm -rf 0bad

# we can still use bad dir names with --name
mkdir bad-name && cd bad-name
mason init --name good
cat Mason.toml | sed '/chplVersion/d'
cd .. && rm -rf bad-name
